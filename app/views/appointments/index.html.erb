<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Student</th>
      <th>Teacher</th>
      <th>Date time start</th>
      <th>Date time end</th>
      <th>Dow name</th>
      <th>Dow number</th>
      <th>Enabled</th>
      <th>Attendance flag</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.user_id %></td>
        <td><%= appointment.student_id %></td>
        <td><%= appointment.teacher_id %></td>
        <td><%= appointment.date_time_start %></td>
        <td><%= appointment.date_time_end %></td>
        <td><%= appointment.dow_name %></td>
        <td><%= appointment.dow_number %></td>
        <td><%= appointment.enabled %></td>
        <td><%= appointment.attendance_flag %></td>
        <td><%= appointment.appointment_type %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
