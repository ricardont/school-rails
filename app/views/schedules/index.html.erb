<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Teacher</th>  
      <th>Student</th>
      <th>Date time start</th>
      <th>Date time end</th>
      <th>Dow number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <% teacher = Teacher.find(schedule.teacher_id) %>
        <% student = Student.find(schedule.student_id) %>
        <td><%= schedule.user_id %></td>
        <td> <%= "#{teacher.first_name} #{teacher.last_name}" %> </td>
        <td> <%= "#{student.first_name} #{student.last_name}" %> </td>
        <td><%= schedule.date_time_start %></td>
        <td><%= schedule.date_time_end %></td>
        <td><%= schedule.dow_number %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

